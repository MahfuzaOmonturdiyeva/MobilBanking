<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobilBanking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="floatActionButtonStyle">
        <item name="android:layout_width">@dimen/_72sdp</item>
        <item name="android:layout_height">@dimen/_72sdp</item>
    </style>
    <style name="pinLineNumbersStyle">
        <item name="android:layout_width">@dimen/_72sdp</item>
        <item name="android:layout_height">@dimen/_72sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
    </style>
    <style name="pinCircleStyle">
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>
</resources>