<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_one_card_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp">

        <ImageView
            android:id="@+id/img_icon_card_item"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_credit_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bank_card_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:text="CARD"
            android:textSize="16sp"
            android:textColor="@color/teal_300"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/img_icon_card_item"
            app:layout_constraintTop_toTopOf="@id/img_icon_card_item"
            app:layout_constraintBottom_toBottomOf="@id/img_icon_card_item"/>

        <TextView
            android:id="@+id/tv_name_card_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:lines="1"
            android:maxLength="24"
            android:maxLines="1"
            android:text="UZCARD"
            android:textSize="18sp"
            android:textStyle="italic"
            android:editable="false"
            app:layout_constraintTop_toBottomOf="@id/tv_bank_card_item"
            app:layout_constraintBottom_toTopOf="@id/tv_pan_card_item"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="Deprecated" />

        <TextView
            android:id="@+id/tv_pan_card_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8600 14** **** 0748"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_card_item"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_copy"
            app:layout_constraintLeft_toRightOf="@id/tv_pan_card_item"
            app:layout_constraintTop_toTopOf="@id/tv_pan_card_item" />

        <TextView
            android:id="@+id/tv_validity_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/23"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_pan_card_item" />

        <TextView
            android:id="@+id/tv_balance_card_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="190 319"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/img_uzcard"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_text_uzs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UZS"
            android:layout_marginStart="@dimen/_4sdp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/img_uzcard"
            app:layout_constraintLeft_toRightOf="@id/tv_balance_card_item" />

        <ImageView
            android:id="@+id/img_uzcard"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_uzcard"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_validity_date_item"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_humo"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_humo"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_validity_date_item"
            app:layout_constraintRight_toLeftOf="@id/img_uzcard" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>